</style>
    <div class="container">
        <div class="left_Side">
            <div class="profileText">
                <div class="imgBx">
                    <img class="photo" src=<%= 'https://hindustan-jobs.hackerkernel.com/assets/images/user/' + data.image %>>
                </div>
            </div>

            <div class="contactInfo">
                <h3 class="title">Contact</h3>
                <ul>
                    <% if(data.city.name && data.state.name ){ %>
                        <li>
                            <span class="icon"><i class="fa fa-map-marker" aria-hidden="true"></i></span>
                            <span class="text">
                                <%= data.city.name +' , '+ data.state.name %>
                            </span>
                        </li>
                    <% } %>
                    <% if(data.contact){ %>
                        <li>
                            <span class="icon"><i class="fa fa-phone" aria-hidden="true"></i></span>
                            <span class="text">+91 <%= data.contact %></span>
                        </li>
                    <% } %>
                        
                    <% if(data.email){ %>
                        <li>
                            <span class="icon"><i class="fa fa-envelope-o" aria-hidden="true"></i></span>
                            <span class="text"><%= data.email %></span>
                        </li>
                    <% } %>
                    
                    <% if(data.portfolio){ %>
                        <li>
                            <span class="icon"><i class="fa fa-globe" aria-hidden="true"></i></span>
                            <span class="text"><%= data.portfolio %></span>
                        </li>        
                    <% } %>
                </ul>
                <hr />

                <h3 class="title">FOLLOW ME</h3>
                <ul>
                    <% if(data.facebook){ %>     
                        <li>
                            <h4 class="tag">FACEBOOK</h4>
                            <h5 class="links"><%= data.facebook %></h5>
                        </li>
                    <% } %>
                    <% if(data.instagram){ %>     
                        <li>
                            <h4 class="tag">INSTAGRAM</h4>
                            <h5 class="links"><%= data.instagram %></h5>
                        </li>
                    <% } %>
                    <% if(data.twitter){ %>     
                        <li>
                            <h4 class="tag">TWITTER</h4>
                            <h5 class="links"><%= data.twitter %></h5>
                        </li>
                    <% } %>

                    <% if(data.behance){ %>     
                        <li>
                            <h4 class="tag">BEHANCE</h4>
                            <h5 class="links"><%= data.behance %></h5>
                        </li>
                    <% } %>
                  
                </ul>
                <hr />

                <% if(data.resume_references.length > 0){ %>
                    <h3 class="title">REFERENCE</h3>
                    <ul>
                        <% data.resume_references.forEach((ref) => { %>
                            <li>
                                <h4 class="tag"><%= ref.title %></h4>
                                <h5 class="links"><%= ref.designation %></h5>
                                <h5 class="links">phone: <%= ref.phone %></h5>
                                <h5 class="links">E_mail: <%= ref.email %></h5>
                            </li>
                        <% }) %>
                    </ul>
                    <hr />
                <% } %>
                <% if(data.resume_hobbies.length > 0){ %>
                    <h3 class="title">HOBBIES</h3>
                    <ul>
                        <% data.resume_hobbies.forEach((hoby) => { %>
                            <li>
                                <h5 class="links"><%= hoby.hobbyName %></h5>
                            </li>
                        <% }) %>
                    </ul>
                <% } %>


            </div>
        </div>
        <div class="right_Side">
            <div class="info">
                <h2 class="title2"><%= data.name %></h2>
                <h5 class="title3"><%= data.designation %></h5>
                <h3 class="aboutme">ABOUT ME</h3>
                <p><%= data.description %>
                </p>
            </div>
            <div class="about">
                <% if(data.resume_educations.length > 0){ %>
                    <h3 class="title4">EDUCATION</h3>
                    <% data.resume_educations.forEach((education) => { %>
                        <div class="box">
                            <div class="year_company">
                                <h5><%= education.from + ' - ' + education.to %></h5>  
                            </div>
                            <div class="text">
                                <div class="prograss-bar">
                                    <div class="order-track-step">
                                        <div class="order-track-status">
                                            <span class="order-track-status-dot"></span>
                                            <span class="order-track-status-line"></span>
                                        </div>
        
                                    </div>
        
                                </div>
                                <div class="infor">
                                    <h4><%= education.title %></h4>
                                    <!-- <h5>Senior UX Developer </h5> -->
                                    <p><%= education.description %></p>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } %>

                        
                <% if(data.resume_experiences.length > 0){ %>
                    <h3 class="title4">Experience</h3>
                    <% data.resume_experiences.forEach((experience) => { %>
                        <div class="box">
                            <div class="year_company">
                                <h5><%= experience.from + ' - ' + experience.to %></h5>
                            </div>
                            <div class="text">
                                <div class="prograss-bar">
                                    <div class="order-track-step">
                                        <div class="order-track-status">
                                            <span class="order-track-status-dot"></span>
                                            <span class="order-track-status-line"></span>
                                        </div>
        
                                    </div>
        
                                </div>
                                <div class="infor">
                                    <h4><%= experience.title %> </h4>
                                    <h5><%= experience.designation %></h5>
                                    <p><%= experience.description %></p>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } %>


                <hr />
                <% if(data.resume_skills.length > 0){ %>
                    <div class="language">
                        <h3 class="title4">skills</h3>
                        <div class="skills">
                            <% data.resume_skills.forEach((skill) => { %>
                                <div class="progress">
                                    <ul>
                                        <li>
                                            <span class="text"><%= skill.SkillSubCategory.name %></span>
                                            <progress class="percent" value="<%= skill.rating * 20 %>" max="100"> <%= skill.rating * 20 %>% </progress>
                                        </li>
                                    </ul>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                <% } %>

            </div>

        </div>
    </div>

<%- include('../partials/resume/footer.ejs') -%>




