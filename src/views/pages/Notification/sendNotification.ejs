<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>New Notification</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item active">Notification</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Create New Notification</h3>
                </div>

                <div>
                    <% if(message !='' ) { %>
                        <div class="p-3">
                            <div class="alert  mb-0"
                                style="background-color: rgb(141, 228, 141); border: none; color: rgb(2, 120, 28);"
                                role="alert">
                                <%= message %>
                            </div>
                        </div>

                        <% } else if(error !='' ){ %>
                            <div class="p-3">
                                <div class="alert alert-dismissible mb-0"
                                    style="background-color: rgb(237 183 183); border: none; color: rgb(120 2 2);"
                                    role="alert">
                                    <%= error %>
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                </div>
                            </div>

                            <% } %>

                </div>

                <form method="post" action="/admin/send-notification">
                    <div class="container">
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Title</label>
                                    <input type="text" required class="form-control" name="title"
                                        value="<%= formValue && formValue.title ? formValue.title :'' %>"
                                        placeholder="Notification Title">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Message</label>
                                    <input type="text" required class="form-control" name="message"
                                        value="<%= formValue && formValue.message ? formValue.message :'' %>"
                                        placeholder="Message">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label"> Notification Type</label>
                                    <input type="text" required class="form-control" name="notification_type"
                                        value="<%= formValue && formValue.notification_type ? formValue.notification_type :'' %>"
                                        placeholder="Notification Type">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Send To</label>
                                    <select class="form-control select2bs4" required style="width: 100%;" name="receiver">
                                        <option value="">Select Reciepents</option>
                                        <option value="All">All</option>
                                        <option value="JS">candidate</option>
                                        <option value="COMPANY">company</option>
                                        <option value="CS">company staff</option>
                                        <option value="HSP">home service provider</option>
                                        <option value="HSS">home service seeker</option>
                                        <option value="LH">local hunar</option>
                                        <option value="BC">business correspondence</option>
                                        <option value="ADVISOR">advisor</option>
                                        <option value="CM">cluster manager</option>
                                        <option value="FSE">field sales executive</option>
                                    </select>
                                </div>
                            </div>
                        </div>


                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Status</label>
                                    <select class="form-control select2bs4" required style="width: 100%;" name="status">
                                        <option value="">Select Status</option>
                                        <option value="0">Inactive</option>
                                        <option value="1">Active</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-sm btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>