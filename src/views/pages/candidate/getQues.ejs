<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Job Post Table </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item" ><a href="/admin/candidate">Company</a></li>
                        <li class="breadcrumb-item" ><a href="/admin/candidate/show-job-details/<%= id %>">Job Post Detail</a></li>

                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Questions & Answers</h3>
                        </div>

                        <div>
                            <% if(message != 0) { %>
                            <div class="p-3">
                                <div class="alert mb-0"
                                    style="background-color: rgb(188 252 188); border: none; color: rgb(2, 120, 28);"
                                    role="alert">
                                    <%= message %>
                                </div>
                            </div>
                        
                            <% } else if(error != 0){ %>
                            <div class="p-3">
                                <div class="alert mb-0"
                                    style="background-color: rgb(237 183 183); border: none; color: rgb(120 2 2);"
                                    role="alert">
                                    <%= error %>
                                </div>
                            </div>
                        
                            <% } %>
                        </div>
                        

                        <% if(data.count != 0) { %>

                            <div class="card-body">
                                    <table id="example2" class="table table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>S no.</th>
                                                <th>Questions</th>
                                                <th>Answers</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% data.rows.forEach((data, index)=> { %>
                                                <tr>                    
                                                    <td>
                                                        <%= index + 1 + ((pageNo - 1) * limit) %>
                                                    </td>                                                
                                                    <td>
                                                        <%= data.questions %>
                                                    </td>
                                                    <td></td>
                                                    <td>
                                                        <% if(data.status === 0) { %>
                                                            Inactive
                                                        <% } else if(data.status === 1) { %>
                                                           Active
                                                        <% } %>
                                                    </td>
                                                </tr>
                                            <%} ) %>
                                        </tbody>
                                    </table>
                            </div>
                        <% } %>

 
                        <div class="paginationWrapper" style="padding-right: 1rem;">
                            <% if (extra.pages> 0) { %>
                                <ul class="pagination d-flex justify-content-end">
                                    <% var i=(Number(extra.pageNo) > 5 ? Number(extra.pageNo) - 4 : 1) %>
                                        <% if (i !==1) { %>
                                            <li class="page-item disabled">
                                                <a class="page-link">...</a></li>
                                        <% } %>
                                        <% for (; i <=(Number(extra.pageNo) + 4) && i <=extra.pages; i++) { %>
                                            <% if (i==extra.pageNo) { %>
                                                <li class="page-item active">
                                                    <a class="page-link"><%= i %></a>
                                                </li>
                                            <% } else { %>
                                                <li class="page-item">
                                                    <a class="page-link"
                                                        href="/admin/candidate/job-post-detail/questions/<%= id %>?page=<%= i %>>">
                                                    <%= i %> </a>
                                                </li>
                                            <% } %>
                                            <% if (i==Number(extra.pageNo) + 4 && i < extra.pages) { %>
                                                <li class="page-item disabled">
                                                    <a class="page-link">...</a></li>
                                            <% } %>
                                        <% } %>
                                </ul>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

