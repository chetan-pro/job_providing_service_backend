        <form
          method="post"
          action="/admin/create-service/<%= id %>"
          enctype="multipart/form-data"
        >
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="form-label">Service Name</label>
                  <input
                    type="text"
                    class="form-control"
                    name="service_name"
                    value=""
                    placeholder=""
                  />
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="form-label">Category</label>
                  <select
                    class="form-control select2bs4"
                    style="width: 100%"
                    id="state-dropdown"
                    name="service_categories"
                  >
                    <option value="">Select Category</option>
                    <% category.forEach((data) => { %>
                    <option value="<%= data.id %>">
                      <%= data.category_name %>
                    </option>
                    <% }) %>
                  </select>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label class="form-label"
                    >Specify Service Charges (in â‚¹)</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    name="service_charge"
                    value=""
                    placeholder=""
                  />
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="form-label"
                    >Days Available Week For Booking</label
                  >
                  <br />
                  <div class="row">
                    <% days.forEach((data) => { %>
                    <div class="m-2">
                      <input
                        type="checkbox"
                        name="days_available_<%=data.id%>"
                        id="<%=data.id%>"
                        value="<%=data.day_name%>"
                      />
                      <h6><%=data.day_name%></h6>
                    </div>
                    <% }) %>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="form-label">Service Photos</label>
                  <br />
                      <input
                        type="file"
                        name="photos"
                        id="image-picker-input"
                        value=""
                        accept="image/png, image/gif, image/jpeg"
                        multiple 
                      />
                  </div>
                  <div id="imageBox"  style="display: flex;">
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- /.card-body -->
          <div class="card-footer">
            <button type="submit" class="btn btn-sm btn-primary">Submit</button>
          </div>
        </form>
