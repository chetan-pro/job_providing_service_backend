<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Service Detail</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item active">
                            <a href="/admin/service-provider-all-services/<%= id %>">All Services</a
              >
            </li>
            <li class="breadcrumb-item active">Service Detail</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <!-- Default box -->
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Service Detail</h3>
      </div>
      <div class="card-body">
        <div class="container px-4 row">
          <div class="col-6">
            <div class="row mb-2" style="font-size: 18px">
              <div class="col-md-6 text-muted">Service Name:</div>
              <div class="col-md-6">
                <%= data.service_name ? data.service_name : 'Nil' %>
              </div>
            </div>
            <hr />
            <div class="row mb-2">
              <div class="col-md-6 text-muted">Service Charge :</div>
              <div class="col-md-6">
                â‚¹ <%= data.service_charge ? data.service_charge : 'Nil' %>
              </div>
            </div>
            <hr />
            <div class="row mb-2">
              <div class="col-md-6 text-muted">Service Categories :</div>
              <div class="col-md-6">
                <%= data.ServiceCategories ?
                data.ServiceCategories.map((value)=>value.category_name ) :
                'Nil' %>
              </div>
            </div>
          </div>
          <div class="col-1"></div>
          <div class="col-5">
            <div class="row mb-2" style="font-size: 18px">
              <div class="col-md-6 text-muted">Status :</div>
              <div class="col-md-6"><%= data.service_status %></div>
            </div>
            <hr />
            <div class="row mb-2" style="font-size: 18px">
              <div class="col-md-6 text-muted">Days Available :</div>
              <div class="col-md-6">
                <%=
                data.serviceDays?data.serviceDays.map((value)=>value.day_name
                ):'Nil' %>
              </div>
            </div>
          </div>

          <hr />
        </div>
        <hr />
        <div class="col-md-6 text-muted">Service Images :</div>

        <div id="imageBox" style="display: flex">
          <% data.ServiceImages?data.ServiceImages.map((value)=> {%>
          <div
            style=" margin-right: 10px;
              border-radius: 5px;
              width: 150px;
              height: 150px;
              background-repeat: no-repeat;
              background-size: contain;
              background-position: center;
              background-color: grey;
              background-image: url('/assets/images/user/<%= value.image %>');"
          >
        </div>
       
                            <%  }):'Nil' %>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>