<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Service Provider create</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admin/service-category">Service Category list</a></li>
                        <li class="breadcrumb-item active">Create Service Category</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Create Service Category</h3>
                </div>
                <div>
                    
                    <% if(message != '') { %>
                    <div class="p-3">
                        <div class="alert  mb-0"
                            style="background-color: rgb(141, 228, 141); border: none; color: rgb(2, 120, 28);"
                            role="alert">
                            <%= message %>
                        </div>
                    </div>

                    <% } else if(error != ''){ %>
                    <div class="p-3">
                        <div class="alert alert-dismissible mb-0"
                            style="background-color: rgb(117, 100, 100); border: none; color: rgb(120 2 2);" role="alert">
                            <%= error %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                    <% } %>
                </div>

                <form method="post" action="/admin/add-service-category" enctype='multipart/form-data'>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label  class="form-label">Category Name</label>
                                    <input type="text" class="form-control" name="category_name" value="<%= formValue && formValue.category_name ? formValue.category_name :'' %>" placeholder="Name">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Image</label> <br />
                                    <input type="file" name="image">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label  class="form-label">Category Description</label>
                                    <textarea class="form-control" name="category_desc" id="" cols="20" rows="5" value="<%= formValue && formValue.category_desc ? formValue.category_desc :'' %>" ></textarea>
                                </div>
                            </div>
                        </div>
                
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-sm btn-primary">Submit</button>
                    </div>
                </form>

            </div>
        </div>
    </section>
</div>
