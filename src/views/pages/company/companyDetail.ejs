<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Company Detail</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item active">
                            <a href="/admin/company">Company List</a>
                        </li>
                        <li class="breadcrumb-item active">Company Detail</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="card">
            <div class="card-header row">
                <div class="col-8">
                    <h3 class="card-title">Company Detail</h3>
                </div>
                <div class="col-4">
                    <a href="/admin/company/get-all-job-post/<%= alldata.id %>" class="btn btn-sm btn-outline-primary">Show All Jobs</a
          >
          &nbsp;
          <a
            href="/admin/company/view-chats-company/<%= alldata.id %>"
            class="btn btn-sm btn-outline-primary"
            >View Chats</a
          >
          &nbsp;
          <a
            href="/admin/company/view-company-subcriptions/<%= alldata.id %>"
            class="btn btn-sm btn-outline-primary"
            >View Subcriptions</a
          >
          &nbsp;
        </div>
      </div>

      <div>
        <% if(message != 0) { %>
        <div class="p-3">
          <div
            class="alert mb-0"
            style="
              background-color: rgb(188 252 188);
              border: none;
              color: rgb(2, 120, 28);
            "
            role="alert"
          >
            <%= message %>
          </div>
        </div>

        <% } else if(error != 0){ %>
        <div class="p-3">
          <div
            class="alert mb-0"
            style="
              background-color: rgb(237 183 183);
              border: none;
              color: rgb(120 2 2);
            "
            role="alert"
          >
            <%= error %>
          </div>
        </div>

        <% } %>
      </div>
      <div class="card-body">
        <div class="container px-4" style="font-size: 18px">
          <div class="row">
            <div class="col-6">
              <div class="row">
                <div class="col-md-6 text-muted">Company Name :</div>
                <div class="col-md-6">
                  <%= alldata.name ? alldata.name : 'Nil' %>
                </div>
              </div>
            </div>
            <div class="col-6">
              <div class="row">
                <div class="col-md-6 text-muted">Email :</div>
                <div class="col-md-6">
                  <%= alldata.email ? alldata.email : 'Nil' %>
                </div>
              </div>
            </div>
          </div>

          <hr />
          <div class="row">
            <div class="col-6">
              <div class="row">
                <div class="col-md-6 text-muted">Mobile Number :</div>
                <div class="col-md-6">
                  <%= alldata.mobile ? alldata.mobile : 'Nil' %>
                </div>
              </div>
            </div>
            <div class="col-6">
              <div class="row">
                <div class="col-md-6 text-muted">Company Description :</div>
                <div class="col-md-6">
                  <%= alldata.company_description ? alldata.company_description
                  : 'Nil' %>
                </div>
              </div>
            </div>
          </div>

          <hr />
          <div class="row">
            <div class="col-6">
              <div class="row">
                <div class="col-md-6 text-muted">Company Link :</div>
                <div class="col-md-6">
                  <%= alldata.company_link ? alldata.company_link : 'Nil' %>
                </div>
              </div>
            </div>
            <div class="col-6">
              <div class="row">
                <div class="col-md-6 text-muted">Company Address :</div>
                <div class="col-md-6">
                  <%= alldata.address_line1 ? alldata.address_line1 : 'Nil' %>
                </div>
              </div>
            </div>
          </div>

          <hr />
          <div class="row">
            <div class="col-6">
              <div class="row">
                <div class="col-md-6 text-muted">State :</div>
                <div class="col-md-6">
                  <%= stateCity.name ? stateCity.name : 'Nil' %>
                </div>
              </div>
            </div>
            <div class="col-6">
              <div class="row">
                <div class="col-md-6 text-muted">City :</div>
                <div class="col-md-6">
                  <%= stateCity.cities[0].name ? stateCity.cities[0].name :
                  'Nil' %>
                </div>
              </div>
            </div>
          </div>
          <hr />
          <div class="row">
            <div class="col-6">
              <div class="row">
                <div class="col-md-6 text-muted">Industry :</div>
                <div class="col-md-6"><%= industry ? industry.name : '' %></div>
              </div>
            </div>
          </div>

          <hr />
          <div class="row">
            <div class="col-6">
              <div class="row">
                <div class="col-md-6 text-muted">Pin code :</div>
                <div class="col-md-6">
                  <%= alldata.pin_code ? alldata.pin_code : 'Nil' %>
                </div>
              </div>
            </div>
            <div class="col-6">
              <div class="row">
                <div class="col-md-6 text-muted">Company Logo :</div>
                <div class="col-md-6">
                  <a href="/assets/images/user/<%= alldata.image %>">
                    <%= alldata.image ? alldata.image : 'Nil' %>
                  </a>
                </div>
            </div>
        </div>
</div>
</div>
</div>
</div>
</section>
</div>