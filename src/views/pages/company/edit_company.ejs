<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Company Update</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
                        <li class="breadcrumb-item">
                            <a href="/admin/company">Company list</a>
                        </li>
                        <li class="breadcrumb-item active">Company Update</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Update Company</h3>
                </div>

                <div>
                    <% if(message != '') { %>
                        <div class="p-3">
                            <div class="alert mb-0" style="
                background-color: rgb(141, 228, 141);
                border: none;
                color: rgb(2, 120, 28);
              " role="alert">
                                <%= message %>
                            </div>
                        </div>

                        <% } else if(error != ''){ %>
                            <div class="p-3">
                                <div class="alert alert-dismissible mb-0" style="
                background-color: rgb(237 183 183);
                border: none;
                color: rgb(120 2 2);
              " role="alert">
                                    <%= error %>
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
                                </div>
                            </div>

                            <% } %>
                </div>

                <form method="post" action="/admin/edit-company/<%= id %>">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="name" value="<%= alldata.name %>" placeholder="Company name" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="email" class="form-control" name="email" value="<%= alldata.email %>" placeholder="Company email" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="number" class="form-control mobileNumberField" name="mobile" value="<%= alldata.mobile %>" placeholder="Company Mobile no." />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="company_link" value="<%= alldata.company_link %>" placeholder="Company Website Link" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="company_description" value="<%= alldata.company_description %>" placeholder="Company Description" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="address_line1" value="<%= alldata.address_line1 %>" placeholder="Company Address 1" />
                                </div>
                            </div>
                        </div>

                        <div class="row">

                            <div class="col-md-6"></div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control pincodeNumberField" name="pin_code" id="pincode-text-field" value="<%= alldata.pin_code %>" placeholder="Pin code" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <select class="form-control select2bs4" style="width: 100%" id="state-dropdown" name="state_id">
                    <option value="<%= alldata.state.id %>">
                      <%= alldata.state.name %>
                    </option>
                    <% statedata.forEach((state) => { %>
                    <option value="<%= state.id %>"><%= state.name %></option>
                    <% }) %>
                  </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <select class="form-control select2bs4" style="width: 100%" id="city-dropdown" name="city_id">
                    <option value="<%= alldata.city.id %>">
                      <%= alldata.city.name %>
                    </option>
                  </select>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <br />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="your_full_name" value="<%= alldata.your_full_name %>" placeholder="Full Name" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="your_designation" value="<%= alldata.your_designation %>" placeholder="Your Designation" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6"></div>
                        </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-sm btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>