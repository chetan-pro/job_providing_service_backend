<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Miscellaneous Role create</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a href="/admin/miscellaneous-roles">Miscellaneous User list</a>
                        </li>
                        <li class="breadcrumb-item active">Create Miscellaneous Role</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Create Miscellaneous Role</h3>
                </div>

                <% if(message != '') { %>
                    <div class="p-3">
                        <div class="alert mb-0" style="
              background-color: rgb(141, 228, 141);
              border: none;
              color: rgb(2, 120, 28);
            " role="alert">
                            <%= message %>
                        </div>
                    </div>

                    <% } else if(error != ''){ %>
                        <div class="p-3">
                            <div class="alert alert-dismissible mb-0" style="
              background-color: rgb(237 183 183);
              border: none;
              color: rgb(120 2 2);
            " role="alert">
                                <%= error %>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
                            </div>
                        </div>
                        <% } %>

                            <form method="post" action="/admin/add-miscellaneous-roles" enctype="multipart/form-data">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="form-label">Name</label>
                                                <input type="text" class="form-control" name="name" value="" placeholder="name" />
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="form-label">Designation</label>
                                                <input type="text" class="form-control" name="your_designation" value="" placeholder="Designation" />
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="form-label">User Role</label>
                                                <select class="form-control" style="width: 100%" name="user_role_type">
                    <option disabled selected value hidden>Select Role</option>
                    <option value="BC">BC</option>
                    <option value="ADVISOR">ADVISOR</option>
                    <option value="CM">CM</option>
                    <option value="FSE">FSE</option>
                  </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label">Mobile Number</label>
                                                <input type="number" class="form-control mobileNumberField" name="mobile" value="" placeholder="Mobile no." />
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label">E-mail</label>
                                                <input type="text" class="form-control" name="email" value="" placeholder="E-mail" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label">State</label>
                                                <select class="form-control select2bs4" style="width: 100%" id="state-dropdown" name="state_id">
                    <option disabled selected value hidden>Select State</option>
                    <% statedata.forEach((state) => { %>
                    <option value="<%= state.id %>"><%= state.name %></option>
                    <% }) %>
                  </select>
                                            </div>
                                        </div>
                                        <!-- /.col -->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label">City</label>
                                                <select class="form-control select2bs4" style="width: 100%" id="city-dropdown" name="city_id">
                    <option disabled selected value hidden>Select City</option>
                  </select>
                                            </div>
                                        </div>
                                        <!-- /.col -->
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label">Pin code</label>
                                                <input type="text" class="form-control pincodeNumberField" id="pincode-text-field" name="pin_code" value="" placeholder="PinCode no." />
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label">Date of birth (DD/MM/YYYY)</label>
                                                <input type="date" class="form-control" name="dob" value="" placeholder="Date of birth" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>image</label> <br />
                                                <input type="file" name="image" />
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Gender</label>
                                                <select class="form-control" style="width: 100%" name="gender">
                    <option disabled selected value style="display: none">
                      -- select an option --
                    </option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="transgender">Trans-Gender</option>
                  </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>status</label>
                                                <select class="form-control select2bs4" style="width: 100%" name="status">
                    <option value="">Select status</option>
                    <option value="1" selected>Active</option>
                    <option value="0">Inactive</option>
                    <option value="4">Un Verify</option>
                  </select>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label">Password</label>
                                                <input type="password" class="form-control" name="password" placeholder="Password" />
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label">Confirm Password</label>
                                                <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.card-body -->
                                <div class="card-footer">
                                    <button type="submit" class="btn btn-sm btn-primary">Submit</button>
                                </div>
                            </form>
            </div>
        </div>
    </section>
</div>