<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Testimonials</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right"></ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-10"></div>

                                <div class="col-2">
                                    <a href="/admin/add-testimonials/" style="margin-top: 6px" class="btn btn-sm btn-primary">Add Testimonial</a
                  >
                </div>
              </div>
            </div>

            <div>
              <% if(message != 0) { %>
              <div class="p-3">
                <div
                  class="alert mb-0"
                  style="
                    background-color: rgb(188 252 188);
                    border: none;
                    color: rgb(2, 120, 28);
                  "
                  role="alert"
                >
                  <%= message %>
                </div>
              </div>

              <% } else if(error != 0){ %>
              <div class="p-3">
                <div
                  class="alert mb-0"
                  style="
                    background-color: rgb(237 183 183);
                    border: none;
                    color: rgb(120 2 2);
                  "
                  role="alert"
                >
                  <%= error %>
                </div>
              </div>

              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="content">
    <div class="container-fluid">
      <div class="card">
        <% if(data.count !=0) { %>
        <div class="card-body">
          <table id="example2" class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>S no.</th>
                <th>Name</th>
                <th>State</th>
                <th>City</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% data.rows.forEach((data, index)=> { %>
              <tr>
                <td><%= index + 1 + ((pageNo - 1) * limit) %></td>
                <td><%= data.name %></td>
                <td><%= data.state.name %></td>
                <td><%= data.city.name %></td>
                <td>
                  <a
                    href="/admin/testimonials-details/<%= data.id %>"
                    class="btn btn-sm btn-outline-primary"
                    >View Detail</a
                  >&nbsp; <% if(data.status==2) { %>
                  <a
                    href="/admin/edit-testimonials/<%= data.id %>"
                    class="btn btn-sm btn-outline-primary"
                    >Edit</a
                  >
                  &nbsp; <% } else { %>
                  <a
                    href="/admin/edit-testimonials/<%= data.id %>"
                    class="btn btn-sm btn-outline-primary"
                    >Edit</a
                  >
                  &nbsp;
                  <a
                    href="/admin/delete-testimonials/<%= data.id %>"
                    class="btn btn-sm btn-outline-danger"
                    >Delete</a
                  >
                  &nbsp; <% } %>
                </td>
              </tr>

              <%} ) %>
            </tbody>
          </table>
        </div>
        <% } %>

        <div class="paginationWrapper" style="padding-right: 1rem">
          <% if (extra.pages > 0) { %>
          <ul class="pagination d-flex justify-content-end">
            <% var i=(Number(extra.pageNo)> 5 ? Number(extra.pageNo) - 4 : 1) %>
            <% if (i !==1) { %>
            <li class="page-item disabled">
              <a class="page-link">...</a>
                                    </li>
                                    <% } %>
                                        <% for (; i <=(Number(extra.pageNo) + 4) && i <=
            extra.pages; i++) { %>
                                            <% if (i==extra.pageNo) { %>
                                                <li class="page-item active">
                                                    <a class="page-link">
                                                        <%= i %>
                                                    </a>
                                                </li>
                                                <% } else { %>
                                                    <li class="page-item">
                                                        <a class="page-link" href="/admin/local-hunar/?page=<%= i %>&search=<%= searchVal %>">
                                                            <%= i %>
                                                        </a>
                                                    </li>
                                                    <% } %>
                                                        <% if (i==Number(extra.pageNo) + 4 && i < extra.pages) { %>
                                                            <li class="page-item disabled">
                                                                <a class="page-link">...</a>
                                                            </li>
                                                            <% } %>
                                                                <% } %>
                                                                    </ul>
                                                                    <% } %>
                                </div>
                            </div>
                        </div>
    </section>
    </div>