<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Local Hunar </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admin/local-hunar">Local Hunar list</a></li>
                        <li class="breadcrumb-item active">Local Hunar Video </li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Update Video</h3>
                </div>

                <div>
                    <% if(message != '') { %>
                    <div class="p-3">
                        <div class="alert  mb-0"
                            style="background-color: rgb(141, 228, 141); border: none; color: rgb(2, 120, 28);"
                            role="alert">
                            <%= message %>
                        </div>
                    </div>

                    <% } else if(error != ''){ %>
                    <div class="p-3">
                        <div class="alert alert-dismissible mb-0"
                            style="background-color: rgb(237 183 183); border: none; color: rgb(120 2 2);" role="alert">
                            <%= error %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>

                    <% } %>

                </div>

                <form method="post" action="/admin/local-hunar/edit-video/<%= alldata.id %>">
                    <div class="container">
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                       <label  class="form-label">URL</label>
                                    <input type="text" required class="form-control" name="url" value= "<%= alldata.url %>" >
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                       <label  class="form-label">Title</label>
                                    <input type="text" required class="form-control" name="title" value= "<%= alldata.title %>">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                       <label  class="form-label">Description</label>
                                    <input type="text" class="form-control" name="description" value= "<%= alldata.description %>" >
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                       <label  class="form-label">Status</label>

                                    <select class="form-control select2bs4" required style="width: 100%;"  name="approved">    
                                        <option value="<%= alldata.approve %>">
                                            <% if(alldata.approve== 'y'){ %>
                                                Approved
                                           <% } else if (alldata.approve == 'n') { %>
                                                Rejected
                                            <% } else { %>
                                                Pending
                                                <% }%>
                                        </option>
                                       <option value="y">Approved</option>
                                       <option value="n">Rejected</option>
                                       <option value="p">Pending</option>
                                       
                                    </select>
                                  </div>
                            </div>
                        </div>
                     
                
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-sm btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>
